{
  "name": "listen-together",
  "version": "1.0.0",
  "description": "A collaborative YouTube listening platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "dev:both": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-all": "npm install && npm run install-client",
    "build:prod": "NODE_ENV=production npm run build",
    "start:prod": "NODE_ENV=production node server.js",
    "deploy": "npm run install-all && npm run build:prod"
  },
  "keywords": ["youtube", "collaborative", "listening", "synchronization"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
