{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/build/$1"
        }
    ],
    "installCommand": "npm install && cd client && npm install",
    "buildCommand": "cd client && DISABLE_ESLINT_PLUGIN=true npm run build",
    "env": {
        "DISABLE_ESLINT_PLUGIN": "true",
        "GENERATE_SOURCEMAP": "false"
    }
}