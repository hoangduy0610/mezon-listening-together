{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/socket.io/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/static/(.*)",
            "dest": "/client/build/static/$1"
        },
        {
            "src": "/(.*\\.(js|css|map|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
            "dest": "/client/build/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/client/build/index.html"
        }
    ],
    "installCommand": "npm install && cd client && npm install",
    "buildCommand": "cd client && npm run build",
    "functions": {
        "server.js": {
            "includeFiles": "src/**"
        }
    }
}